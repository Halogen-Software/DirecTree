<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="MyTheme" parent="android:Theme">
  </style>
  
  <style name="MyTheme.Splash" parent="MyTheme">
    <item name="android:windowBackground">@drawable/splash</item>
    <item name="android:windowNoTitle">true</item>
   </style>

  <style name="MyTheme.MainTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
    <item name="colorPrimary">#B4BFC9</item>
    <item name="actionBarStyle">@style/MyActionBar</item>
    <item name="drawerArrowStyle">@style/DrawerArrowToggle</item>
  </style>

  <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
    <item name="titleTextStyle">@style/TitleTextStyle</item>
  </style>

  <style name="TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
    <item name="android:textColor">#4C6374</item>
  </style>
  
  <style name="DrawerArrowToggle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
    <item name="color">#4C6374</item>
    <item name="spinBars">true</item>
    </style>
</resources>
